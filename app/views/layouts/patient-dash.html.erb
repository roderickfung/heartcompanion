<!DOCTYPE html>
<html>
  <head>
    <title>Heart Companion: Patient's Dashboard</title>
    <%= csrf_meta_tags %>
    <%= javascript_include_tag "https://www.google.com/jsapi" %>
    <script src="//maps.google.com/maps/api/js?v=3.25&key=AIzaSyCy1NBsfYySEaaNN8c64ZUa66hK4NJSuaE"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render partial: '/partials/pat_top_nav'%>

    <!-- Body w/ Side Nave Wrapper -->
    <div id="wrapper">
      <div class="overlay"></div>
      <%= render 'patients/sidebar', patient: @patient %>

      <!-- Page Content -->
      <div id="page-content-wrapper">
        <button type="button" class="hamburger is-closed" data-toggle="offcanvas">
            <span class="hamb-top"></span>
            <span class="hamb-middle"></span>
            <span class="hamb-bottom"></span>
        </button>
        <div class="container">
          <div class='alert-success'>
            <center><%=flash[:notice]%></center>
          </div>
          <div class='alert-danger'>
            <center><%=flash[:alert]%></center>
          </div>
          <div class="row">
            <%=yield%>
          </div>
        </div>
      </div>
      <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->
  </body>
</html>
