<%= form_for clinician, html: {class: 'form-horizontal'} do |f| %>
  <div class='row'>
    <div class='form-group'>
      <div class='col-xs-offset-2 col-sm-ofset-2 col-xs-2 col-sm-2'>
        <%= f.label :username, class:'control-label span12 text-right'%>
      </div>
      <div class='col-xs-4 col-sm-4'>
        <%= f.text_field :username, class:'form-control'%>
      </div>
    </div>
  </div>

  <div class='form-group'>
    <div class='row'>
      <div class='col-xs-offset-2 col-sm-ofset-2 col-xs-2 col-sm-2'>
        <%= f.label :email, class:'control-label span12 text-right'%>
      </div>
      <div class='col-xs-4 col-sm-4'>
        <%= f.email_field :email, class:'form-control'%>
      </div>
    </div>
  </div>

  <div class='form-space'></div>

  <div class='form-group'>
    <div class='row'>
      <div class='col-xs-offset-2 col-sm-ofset-2 col-xs-2 col-sm-2'>
        <%= f.label :first_name, class:'control-label span12 text-right'%>
      </div>
      <div class='col-xs-4 col-sm-4'>
        <%= f.text_field :first_name, class:'form-control'%>
      </div>
    </div>
  </div>

  <div class='form-space'></div>

  <div class='form-group'>
    <div class='row'>
      <div class='col-xs-offset-2 col-sm-ofset-2 col-xs-2 col-sm-2'>
        <%= f.label :last_name, class:'control-label span12 text-right'%>
      </div>
      <div class='col-xs-4 col-sm-4'>
        <%= f.text_field :last_name, class:'form-control'%>
      </div>
    </div>
  </div>

  <div class='form-space'></div>

  <div class='form-group'>
    <div class='row'>
      <div class='col-xs-offset-2 col-sm-ofset-2 col-xs-2 col-sm-2'>
        <%= f.label :phone, 'Phone Number', class:'control-label span12 text-right'%>
      </div>
      <div class='col-xs-4 col-sm-4'>
        <%= f.text_field :phone, class:'form-control'%>
      </div>
    </div>
  </div>

  <div class='form-space'></div>

  <div class='form-group'>
    <div class='row'>
      <div class='col-xs-offset-2 col-sm-ofset-2 col-xs-2 col-sm-2'>
        <%= f.label :address, class:'control-label span12 text-right'%>
      </div>
      <div class='col-xs-4 col-sm-4'>
        <%= f.text_area :address, class:'form-control' , rows: '5'%>
      </div>
    </div>
  </div>

  <div class='page-space-lg'></div>

  <div class='form-group'>
    <div class='row'>
      <div class='col-xs-offset-2 col-sm-ofset-2 col-xs-2 col-sm-2'>
        <%= f.label :password, class:'control-label span12 text-right'%>
      </div>
      <div class='col-xs-4 col-sm-4'>
        <%= f.password_field :password, class:'form-control' , rows: '5'%>
      </div>
    </div>
  </div>

  <div class='form-space'></div>

  <div class='form-group'>
    <div class='row'>
      <div class='col-xs-offset-2 col-sm-ofset-2 col-xs-2 col-sm-2'>
        <%= f.label :password_confirmation, class:'control-label span12 text-right'%>
      </div>
      <div class='col-xs-4 col-sm-4'>
        <%= f.password_field :password_confirmation, class:'form-control' , rows: '5'%>
      </div>
    </div>
  </div>

  <div class='form-space'></div>

  <div class='form-group'>
    <div class='row'>
      <div class='col-xs-offset-4 col-sm-offset-4 col-xs-3 col-sm-3'>
        <%= f.submit 'Register', class:'btn btn-primary' %>
      </div>
    </div>
  </div>

<%end%>
