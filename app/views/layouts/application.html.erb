<!DOCTYPE html>
<html>
  <head>
    <title>Heartapp</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class='navbar navbar-default navbar-fixed-top bg-faded'>
      <div class='container'>
        <ul class='nav navbar-nav navbar-left'>
          <li><%=link_to 'Heart Companion', root_path, class: 'navbar-brand'%></li>
          <li><%=link_to 'About Us', about_path%></li>
        </ul>
        <ul class='nav navbar-nav navbar-right'>
          <%if clinician_signed_in?%>
            <li><%=link_to "#{current_clinician.full_name}", clinician_path(@clinician)%></li> <%elsif patient_signed_in?%>
            <li><%=link_to "#{current_patient.full_name}", patient_path(@patient)%></li>
          <%else%>
            <li><%=link_to "Welcome!", '#'%></li>
          <%end%>
          <li class='dropdown'>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class='glyphicon glyphicon-user'></span><span class="caret"></span></a>
            <ul class="dropdown-menu">
              <% if clinician_signed_in?%>
                <li><%= link_to "#{current_clinician.full_name}", '#'%></li>
                <li><%= link_to "Log Out", logout_path, method: :delete%></li>
              <%elsif patient_signed_in?%>
                <li><%= link_to "#{current_patient.full_name}", '#'%></li>
                <li><%= link_to "Log Out", logout_path, method: :delete%></li>
              <%else%>
                <li><%=link_to 'Register Clinician', new_clinician_path%></li>
                <li><%=link_to 'Log In as Clinician / Admin', clinician_log_in_path%></li>
                <li><%=link_to 'Log In as Patient', patient_log_in_path%></li>
              <%end%>
            </ul>
          </li>
        </ul>
      </div>
    </nav>
    <div class='container'>
      <div class = 'page-space-lg'></div>
      <div class='alert-success'>
        <center><%=flash[:notice]%></center>
      </div>
      <div class='alert-danger'>
        <center><%=flash[:alert]%></center>
      </div>
      <div class = 'page-space-lg'></div>
      <%= yield %>
    </div>
  </body>
</html>
