            <h3 class='dashboard-title-text'>Dashboard</h3>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class='page-space-lg'></div>

<div class='row'>

  <!-- Panel 1 -->
  <div class='col-sm-4'>
    <div class='panel panel-default'>
      <div class='panel-heading'>
        <h6>Patients without logs for the past 7 days:</h6>
      </div>
      <div class='panel-body'>
        <%= pie_chart PatientLog.where(heartrate: 80..200).count%>
      </div>
    </div>
  </div>

  <!-- <div class='col-sm-2'></div> -->

  <!-- Panel 2 -->
  <div class='col-sm-4'>
    <div class='panel panel-default'>
      <div class='panel-heading'>
        <h6>asdfasfdasdf</h6>
      </div>
      <div class='panel-body'>
        <%= pie_chart PatientLog.where(heartrate: 80..200).count%>
      </div>
    </div>
  </div>

  <!-- Panel 3 -->

  <div class='col-sm-4'>
    <div class='panel panel-default'>
      <div class='panel-heading'>
        <h6>Patients with average heartrate > 85 </h6>
      </div>
      <div class='panel-body top-level-panels'>
        <div class='row-fluid'>
          <div class='col-sm-6'>
            <h6>Full Name:</h6>
          </div>
          <div class='col-sm-3'>
            <center>
              <h6>BPM:</h6>
            </center>
          </div>
          <div class='col-sm-3'>
            <h6>BP:</h6>
          </div>
        </div>
        <% @atrisk.each do |patient| %>
          <div class='row-fluid'>
            <div class='col-sm-6'>
              <%=patient.full_name%>
            </div>
            <div class='col-sm-3'>
              <center>
                <%= patient.patient_logs.average(:heartrate).to_i %>
              </center>
            </div>
            <div class='col-sm-3'>
              <%= patient.patient_logs.average(:bp_hi).to_i%> / <%=patient.patient_logs.average(:bp_low).to_i%>
            </div>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>

