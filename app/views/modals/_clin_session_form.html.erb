<%= form_tag '/clinician_logs_in' do%>
<div class='page-space'></div>

<div class='form-group'>
  <div class='row'>
    <div class='col-sm-12'>
      <div class='input-group'>
        <div class='input-group-addon'><i class='glyphicon glyphicon-user'></i></div>
        <%= text_field_tag :username, nil, class:'form-control', placeholder:'Username'%>
      </div>
    </div>
  </div>
</div>

<div class='page-space'></div>

<div class='form-group'>
  <div class='row'>
    <div class='col-sm-12'>
      <div class='input-group'>
        <div class='input-group-addon'><i class='fa fa-key'></i></div>
        <%= password_field_tag :password, nil , class:'form-control', placeholder: 'Password'%>
      </div>
    </div>
  </div>
</div>

<div class='form-space'></div>

<div class='form-group'>
  <div class='row'>
    <div class='col-sm-offset-4 col-sm-8'>
      <%= check_box_tag :remember_me, 1, params[:remember_me] %> &nbsp;&nbsp; <%=label_tag :remember_me %>
    </div>
  </div>
</div>

<div class='form-group'>
  <div class='row'>
    <div class='col-sm-offset-2 col-sm-8'>
      <%= submit_tag 'Sign In', class: 'btn btn-primary c-login-submit', style: 'width: 100%;'%>
    </div>
  </div>
</div>

<%end%>
